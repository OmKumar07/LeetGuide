# Production Environment Variables for LeetGuide Backend (Render)

# Server Configuration
NODE_ENV=production
PORT=10000

# CORS Configuration - Frontend URLs that can access this API
CORS_ORIGIN=https://leetguide-app.netlify.app,https://leetguide.netlify.app,https://leetguide.com

# API Configuration
API_VERSION=v1
API_BASE_URL=https://leetguide-backend-puq1.onrender.com

# LeetCode API Configuration
LEETCODE_API_URL=https://leetcode.com/graphql
LEETCODE_API_TIMEOUT=10000

# Database Configuration (if needed in future)
# DATABASE_URL=your_database_url_here

# Logging
LOG_LEVEL=info

# Security
HELMET_ENABLED=true

# Health Check
HEALTH_CHECK_ENDPOINT=/health

# Rate Limiting (if implemented)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration (if implemented)
CACHE_TTL=300000
